<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp1.OptionsPage"
             Title="OptionsPage">
    <VerticalStackLayout>
        <Label x:Name="LabelInfo" Text="Welcome to .NET MAUI!" VerticalOptions="Center" HorizontalOptions="Center" />
        <Entry x:Name="EntryCity" Placeholder="Введите название города" TextChanged="EntryCityChanged"/>
        <Button Text="Добавить" Command="{Binding LoadNewCityCommand}"/>
        <Button Text="Очистить список городов" Clicked="OnCuttonClear"/>
    </VerticalStackLayout>
</ContentPage>